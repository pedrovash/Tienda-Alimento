@model Marca

@{
    ViewData["Title"] = "Agregar Edad";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<div class="card text-center  bg-success text-white">
    <div class="card-header">
        <strong>Ingrese el rango de edad del producto</strong>
    </div>
</div>



<hr />
<div class="row justify-content-center">
    <div class="col-md-4">
        <form asp-action="Crear" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group  m-2">
                
                <input asp-for="Name" class="form-control" placeholder="Rango de edad" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group m-2" >
                
                <input asp-for="Descripcion" class="form-control" placeholder="Descripcion"/>
                <span asp-validation-for="Descripcion" class="text-danger"></span>
            </div>
            <div class="form-group m-2" >
                <input type="submit" value="Agregar" class="btn btn-warning col-12" />
            </div>
        </form>
    </div>
</div>

<div class="row justify-content-center">
    <div class="col-md-4">
    <a class="btn btn-warning col-12 mt-2" asp-action="Index">Regresar al listado</a>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
